<div class="container">
  <%= render 'shared/errors', obj: @article %>

  <div class="row justify-content-center">
    <div class="col-10">

      <%= form_with model: @article, local: true, class: 'shadow p-4 mb-3 bg-info' do |f| %>
        <div class="form-group row">
            <%= f.label :title , 'Title:', class: 'col-3 col-form-label text-white'%>
            <%= f.text_field :title, class:'col-8 form-cotrol shadow rounded', placeholder: "Title of article", autofocus: true %>
        </div>

        <div class="form-group row">
            <%= f.label :description, 'Desc:', class: 'col-3 col-form-label text-white' %>
            <%= f.text_area :description, rows: 10, class: "col-8 form-control shadow rounded", placeholder: "Description of article" %>
        </div>

        <!-- CHECKBOX -->
        <div class="form-group row justify-content-center">
            <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |cb| %>
              <% cb.label(class: 'checkbox-inline input_checkbox') {cb.check_box(class: 'checkbox')+ cb.text}%>
            <% end %>
        </div>


        <div class="form-group row justify-content-center">
            <%= f.submit class: 'btn btn-outline-light btn-lg' %>
        </div>
      <% end %>
    
    </div>

    <div class="mb-3">
      <%= link_to "| Cancel request and return to articles listing |", articles_path, class: 'text-info' %>
    </div>
  </div>

</div>
