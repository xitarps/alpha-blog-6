<h1>New article</h1>

<%= form_with model: @article, local: true do |f| %>
<p>
  <%= f.label :title, 'Title:'%>
  <%= f.text_field :title, placeholder: 'type your title here' %>
</p>

<p>
  <%= f.label :title, 'Description:'%>
  <%= f.text_area :title, placeholder: 'type your description' %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>