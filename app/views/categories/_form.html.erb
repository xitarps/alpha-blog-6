<div class="container">
  <%= render 'shared/errors', obj: @category %>
  <div class="row justify-content-center">
    <div class="col-10">

      <%= form_with model: @category, local: true, class: 'shadow p-4 mb-3 bg-info' do |f| %>
        <div class="form-group row">
            <%= f.label :name , 'Category Name:', class: 'col-3 col-form-label text-white'%>
            <%= f.text_field :name, class:'col-8 form-cotrol shadow rounded', placeholder: "Enter name for category", autofocus: true %>
        </div>

        <div class="form-group row justify-content-center">
            <%= f.submit(@category.new_record? ? 'Create' : 'Update', class: 'btn btn-outline-light btn-lg')%>
        </div>
      <% end %>
    
    </div>

    <div class="mb-3">
      <%= link_to "| Cancel request and return to articles listing |", articles_path, class: 'text-info' %>
    </div>
  </div>

</div>
