<h1 class="text-center mt-4">Signin</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">

      <%= form_with(scope: :session, url: login_path, local: true, class: 'shadow p-4 mb-3 bg-info') do |f| %>
        

        <div class="form-group row">
            <%= f.label :email , 'Email:', class: 'col-3 col-form-label text-white'%>
            <%= f.email_field :email, class:'col-8 form-cotrol shadow rounded', placeholder: "Enter your email", autofocus: true %>
        </div>

        <div class="form-group row">
            <%= f.label :password, 'Password:', class: 'col-3 col-form-label text-white' %>
            <%= f.password_field :password, class: "col-8 form-control shadow rounded", placeholder: "Enter your password", value:''%>
        </div>

        <div class="form-group row justify-content-center">
            <%= f.submit 'Log in' , class: 'btn btn-outline-light btn-lg'%>
        </div>
      <% end %>
    
    </div>

    <div class="mb-3">
      <%= link_to "| Cancel request and return to articles listing |", articles_path, class: 'text-info' %>
    </div>
  </div>

</div>
